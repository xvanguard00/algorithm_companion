<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_exit_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/quit"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_learn_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_learn_button"

        app:layout_constraintTop_toBottomOf="@+id/main_challenge_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/main_challenge_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/challenge_button"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/main_learn_button"
        app:layout_constraintStart_toStartOf="@+id/main_learn_button"
        app:layout_constraintTop_toBottomOf="@+id/main_learn_button" />

    <Button
        android:id="@+id/main_learn_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:text="@string/learn"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/main_learn_button"
        app:layout_constraintEnd_toEndOf="@+id/main_learn_button"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/main_learn_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627" />
</androidx.constraintlayout.widget.ConstraintLayout>